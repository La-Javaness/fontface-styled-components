{
	"name": "fontface-styled-components",
	"version": "0.3.0",
	"description": "A script that turns a TTF font into a @font-face declaration for styled-components, derived from Sjors Snoeren's fontface-loader.",
	"license": "MIT",
	"author": "Steve Dodier-Lazaro <sidnioulz@gmail.com>",
	"main": "dist/index.js",
	"files": [
		"dist"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/sidnioulz/fontface-styled-components.git"
	},
	"keywords": [
		"font",
		"fontface",
		"styled-components"
	],
	"bugs": {
		"url": "https://github.com/sidnioulz/fontface-styled-components/issues"
	},
	"homepage": "https://github.com/sidnioulz/fontface-styled-components#readme",
	"devDependencies": {
		"@babel/core": "^7.8.4",
		"@babel/plugin-proposal-export-default-from": "^7.8.3",
		"@babel/plugin-transform-modules-commonjs": "^7.8.3",
		"@babel/polyfill": "^7.8.3",
		"@babel/preset-env": "^7.8.4",
		"@commitlint/cli": "^8.3.4",
		"@commitlint/config-conventional": "^8.3.4",
		"@semantic-release/changelog": "^5.0.1",
		"@semantic-release/commit-analyzer": "^8.0.1",
		"@semantic-release/git": "^9.0.0",
		"@semantic-release/npm": "^7.0.5",
		"@semantic-release/release-notes-generator": "^9.0.1",
		"babel-eslint": "^10.0.3",
		"babel-loader": "^8.0.6",
		"css-loader": "^3.4.2",
		"eslint": "^6.1.0",
		"eslint-config-airbnb": "^18.0.1",
		"eslint-config-prettier": "^6.9.0",
		"eslint-loader": "^4.0.0",
		"eslint-plugin-flowtype": "^4.7.0",
		"eslint-plugin-import": "^2.20.2",
		"eslint-plugin-prettier": "^3.1.2",
		"husky": "^4.2.1",
		"jest": "^25.1.0",
		"prettier": "^2.0.4",
		"semantic-release": "^17.0.6",
		"webpack": "^4.41.5",
		"webpack-cli": "^4.0.0-beta.2"
	},
	"dependencies": {
		"chalk": "^4.0.0",
		"mkdirp": "^1.0.3",
		"ttf2eot": "^2.0.0",
		"ttf2woff": "^2.0.1",
		"ttf2woff2": "^3.0.0",
		"ttfinfo": "^0.2.0"
	},
	"scripts": {
		"test": "jest -u --watch --env=jsdom",
		"test:ci": "CI=true jest -u --env=jsdom --bail --passWithNoTests",
		"start": "yarn build && node --unhandled-rejections=strict dist/index.js",
		"build": "NODE_ENV=development webpack",
		"build:ci": "NODE_ENV=production webpack",
		"prepublishOnly": "yarn test:ci && yarn build:ci",
		"deploy": "yarn version --patch && yarn publish",
		"deploy:minor": "yarn version --minor && yarn publish",
		"deploy:major": "yarn version --major && yarn publish",
		"lint": "yarn eslint --ext .js,.jsx,.ts,.tsx lib/",
		"prettier": "node_modules/prettier/bin-prettier.js \"*/**/*.js\" --ignore-path ./.prettierignore --check"
	},
	"jest": {
		"roots": [
			"<rootDir>/lib"
		],
		"setupFilesAfterEnv": [
			"<rootDir>/lib/setupTests.js"
		],
		"testMatch": [
			"**/__tests__/**/*.test.+(ts|tsx|js)",
			"**/?(*.)+(spec|test).+(ts|tsx|js)"
		],
		"modulePaths": [
			"<rootDir>/lib",
			"<rootDir>/node_modules"
		],
		"transform": {
			"^.+\\.jsx?$": "babel-jest"
		}
	},
	"husky": {
		"hooks": {
			"pre-commit": "yarn test:ci && yarn prettier",
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	},
	"release": {
		"plugins": [
			[
				"@semantic-release/commit-analyzer",
				{
					"preset": "angular",
					"releaseRules": [
						{
							"type": "docs",
							"scope": "README",
							"release": "patch"
						},
						{
							"type": "refactor",
							"release": "patch"
						},
						{
							"type": "style",
							"release": "patch"
						}
					]
				}
			],
			"@semantic-release/release-notes-generator",
			"@semantic-release/npm",
			"@semantic-release/changelog",
			"@semantic-release/git"
		],
		"branch": "master"
	}
}
